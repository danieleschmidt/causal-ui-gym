root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 80

[*.{json,jsonc}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{yml,yaml}]
indent_size = 2

[*.{html,css,scss,sass}]
indent_size = 2

[*.sh]
indent_size = 2

[Dockerfile*]
indent_size = 2

[Makefile]
indent_style = tab

# Ignore generated files
[{dist,build,coverage,node_modules}/**]
trim_trailing_whitespace = false
insert_final_newline = false
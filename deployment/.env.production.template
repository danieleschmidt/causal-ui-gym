# Causal UI Gym Production Environment Configuration
# Copy this file to .env and update values for your deployment

# Application Configuration
ENVIRONMENT=production
NODE_ENV=production
DEBUG=false
LOG_LEVEL=info
PORT=8000

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=https://your-domain.com

# Database Configuration (Optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/causal_ui_gym
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20

# Redis Configuration (Optional)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20
REDIS_TTL=3600

# LLM API Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
LLM_TIMEOUT=30
LLM_MAX_RETRIES=3

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=1800
CACHE_MAX_SIZE=1000

# Performance Configuration
WORKER_COUNT=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
KEEPALIVE=2

# Monitoring and Observability
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true
JAEGER_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Security Middleware
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# HTTPS/TLS Configuration (for production)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# SSL_PROTOCOLS=TLSv1.2,TLSv1.3

# Backup and Recovery
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Resource Limits
MAX_MEMORY_MB=2048
MAX_CPU_PERCENT=80
MAX_DISK_GB=50

# Feature Flags
EXPERIMENTAL_FEATURES=false
ADVANCED_CAUSAL_ALGORITHMS=true
REAL_TIME_UPDATES=true
MULTI_LANGUAGE_SUPPORT=true

# External Services
SLACK_WEBHOOK_URL=your-slack-webhook-for-alerts
EMAIL_SMTP_SERVER=smtp.your-provider.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@domain.com
EMAIL_PASSWORD=your-email-password

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=/api/csp-report

# Session Management
SESSION_TIMEOUT=3600
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=strict

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/application.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
READY_CHECK_TIMEOUT=10

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh
TIMEZONE=UTC

# Development/Testing Overrides (set to false in production)
MOCK_LLM_RESPONSES=false
DISABLE_AUTH=false
ENABLE_DEBUG_ROUTES=false
CORS_ALLOW_ALL=false